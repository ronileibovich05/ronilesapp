<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBEFF1"
    android:padding="16dp">

    <!-- כותרת המסך -->
    <TextView
        android:id="@+id/tvTasksTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My Tasks"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#5A4B4B"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TabLayout לקטגוריות -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutCategories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:layout_constraintTop_toBottomOf="@id/tvTasksTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btnAddCategoryTasks"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Add Category"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8B5E5E"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutCategories"
        app:layout_constraintStart_toStartOf="parent"/>


    <!-- ViewPager2 עם המשימות -->

    <!-- כפתור הוספת משימה -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerTasks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAddCategoryTasks"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_add"
        android:backgroundTint="#8B5E5E"
        app:tint="@android:color/white"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
