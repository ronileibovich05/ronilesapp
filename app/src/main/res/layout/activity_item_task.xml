<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start">

        <!-- כותרת המסך -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_task"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#5A4B4B"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- כותרת המשימה -->
        <EditText
            android:id="@+id/editTextTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/task_title"
            android:padding="12dp"
            android:textColor="#5A4B4B"
            android:textSize="16sp" />

        <!-- תיאור המשימה -->
        <EditText
            android:id="@+id/editTextTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/task_description"
            android:padding="12dp"
            android:textColor="#5A4B4B"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- תאריך -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_date"
            android:textColor="#5A4B4B"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <DatePicker
            android:id="@+id/datePickerTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="true"
            android:layout_marginTop="4dp" />

        <!-- שעה -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_time"
            android:textColor="#5A4B4B"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TimePicker
            android:id="@+id/timePickerTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <!-- קטגוריה -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textColor="#5A4B4B"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/choose_category" />

        <!-- כפתור להוספת קטגוריה חדשה -->
        <Button
            android:id="@+id/btnAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_category"
            android:layout_marginTop="8dp"
            android:padding="10dp" />

        <!-- כפתור שמירה -->
        <Button
            android:id="@+id/buttonSaveTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_task"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:onClick="saveTask" />

        <!-- כפתור ביטול / חזרה -->
        <Button
            android:id="@+id/buttonCancelTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back_to_tasks"
            android:layout_marginTop="12dp"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>
